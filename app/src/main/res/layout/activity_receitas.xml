<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_blue_bg"
    tools:context=".activities.ReceitasActivity">

    <!-- Container da lista (não ocupa tela inteira) -->
    <TextView
        android:id="@+id/Receitas_TextView_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Minhas Receitas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Receitas_ListCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/rc_card_bg"
        app:strokeColor="@color/rc_blue_container"
        app:strokeWidth="1dp"
        app:cardElevation="1dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
        app:layout_constraintTop_toBottomOf="@id/Receitas_TextView_Titulo"
        app:layout_constraintBottom_toTopOf="@id/Receitas_BtnVoltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Receitas_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:clipToPadding="false"
            android:overScrollMode="always"
            tools:listitem="@layout/item_receita" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Receitas_BtnVoltar"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:onClick="voltar"
        android:text="Voltar"
        android:textAllCaps="false"
        android:textColor="@color/rc_blue_primary"
        app:backgroundTint="@color/rc_blue_container"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_arrow_back_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Receitas_Empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Você ainda não possui receitas"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/Receitas_ListCard"
        app:layout_constraintBottom_toBottomOf="@id/Receitas_ListCard"
        app:layout_constraintStart_toStartOf="@id/Receitas_ListCard"
        app:layout_constraintEnd_toEndOf="@id/Receitas_ListCard" />
</androidx.constraintlayout.widget.ConstraintLayout>
