<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AgendarActivity">

    <TextView
        android:id="@+id/Agendar_TextView_Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Consulta"
        android:textSize="34sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/Agendar_Scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Agendar_TextView_Titulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/Agendar_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp"
            android:gravity="center_horizontal">

            <!-- Data -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Agendar_TextInputLayout_Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Agendar_TextInputEditText_Data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="none"
                    android:onClick="abrirDatePicker"
                    tools:text="02/11/2025" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Hora (dropdown de horários) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Agendar_TextInputLayout_Hora"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Horário"
                android:layout_marginTop="8dp"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/Agendar_AutoComplete_Hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:text="14:15" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Médico -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Agendar_TextInputLayout_Medico"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Médico (especialidade - nome)"
                android:layout_marginTop="12dp"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/Agendar_AutoComplete_Medico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionHint="Selecione Especialidade"
                    android:inputType="none"
                    tools:text="Cardiologia - Dra. Ana Silva" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Rotina -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Agendar_TextInputLayout_Rotina"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de rotina"
                android:layout_marginTop="8dp"
                app:endIconMode="dropdown_menu">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/Agendar_AutoComplete_Rotina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:text="Consulta inicial" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Sintomas -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Agendar_TextInputLayout_Sintomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sintomas (até 200 caracteres)"
                android:layout_marginTop="12dp"
                app:counterEnabled="true"
                app:counterMaxLength="200">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Agendar_TextInputEditText_Sintomas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLength="200"
                    android:minLines="3"
                    tools:text="Descreva resumidamente o que você sente" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Informações ao usuário -->
            <TextView
                android:id="@+id/Agendar_TextView_Infos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp"
                android:text="• Ao agendar, a consulta entra como PENDENTE e aguarda confirmação da secretária.\n• Você pode cancelar a qualquer momento enquanto estiver pendente.\n• O valor previsto será indicado automaticamente na consulta assim que ela for marcada como PENDENTE." />

            <!-- Botão -->
            <Button
                android:id="@+id/Agendar_Button_Salvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="enviarConsulta"
                android:text="Agendar consulta" />

            <Space
                android:layout_width="1dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
