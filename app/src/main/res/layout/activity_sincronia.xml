<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1118">

    <!-- Logo central -->

    <!-- Status “Conectado” MAIOR e mais abaixo -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="48dp"
        android:alpha="0.9"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/logobranca"
        app:layout_constraintBottom_toTopOf="@+id/sync_status_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/sync_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.02"
        android:text="Conectado"
        android:textColor="#F5F7FA"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <!-- Overlay OK: círculo com check, animado -->
    <FrameLayout
        android:id="@+id/sync_ok_overlay"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:visibility="gone"
        android:foregroundGravity="center"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/sync_status_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp">

        <View
            android:id="@+id/success_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ok_circle" />

        <ImageView
            android:id="@+id/success_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_check_56"
            android:layout_gravity="center"
            app:tint="#FFFFFF" />
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Sincronia_Button_Voltar"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:text="Voltar"
        android:textAllCaps="false"
        android:textColor="@color/rc_blue_primary"
        app:backgroundTint="@color/rc_blue_container"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_arrow_back_24"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
